<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
    		<groupId>com.albertsons.aaai.sarea</groupId>
    		<artifactId>itds</artifactId>
    		<version>1.0.0-SNAPSHOT</version>
    </parent>
	<artifactId>build</artifactId>
	<packaging>pom</packaging>
	<dependencies>
            <dependency>
    			<groupId>com.exadatum.xsuite</groupId>
    			<artifactId>custom-camus</artifactId>
    			<version>1.0.0-SNAPSHOT</version>
    			<type>tar.gz</type>
    		</dependency>
        <!--<dependency>
            <groupId>com.albertsons.aaai.sarea</groupId>
            <artifactId>tools</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>-->
        <dependency>
            <groupId>com.albertsons.aaai.sarea</groupId>
            <artifactId>releases</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
		<dependency>
			<groupId>com.albertsons.aaai.sarea</groupId>
			<artifactId>setup</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>tar.gz</type>
		</dependency>
        <dependency>
            <groupId>com.albertsons.aaai.sarea</groupId>
            <artifactId>config</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
		<dependency>
			<groupId>com.albertsons.aaai.sarea</groupId>
			<artifactId>hive-udfs</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.albertsons.aaai.sarea</groupId>
			<artifactId>pig-udfs</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
        <dependency>
        	<groupId>com.albertsons.aaai.sarea</groupId>
        	<artifactId>itds-flow</artifactId>
        	<version>1.0.0-SNAPSHOT</version>
        	<type>zip</type>
        </dependency>
	<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>accounting-ingest</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>item-ingest</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>accounting-transform</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>item-transform</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>accounting-merge</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>item-merge</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
<dependency>
<groupId>com.albertsons.aaai.sarea</groupId>
<artifactId>cleanup</artifactId>
<version>1.0.0-SNAPSHOT</version>
<type>tar.gz</type>
</dependency>
</dependencies>
    <build>
		<finalName>${mvn.project.name}-${mvn.project.version}</finalName>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>copy-dependencies</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${project.build.directory}/itds
                                </outputDirectory>
                                <includeArtifactIds>itds-flow</includeArtifactIds>
                            </configuration>
                        </execution>
                        <execution>
                            <id>unpack-dependencies</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack-dependencies</goal>
                            </goals>
                            <configuration>
                                <includeTypes>tar.gz</includeTypes>
                                <excludeArtifactIds>itds-flow,shell-functions</excludeArtifactIds>
                                <outputDirectory>${project.build.directory}/itds</outputDirectory>
                                <stripVersion>true</stripVersion>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>itds-tar-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <appendAssemblyId>false</appendAssemblyId>
                                <descriptors>
                                    <descriptor>
                                        ${multi.module.project.root.dir}/libraries/common/src/main/resources/assemblies/itds-tar-assembly.xml
                                    </descriptor>
                                </descriptors>
                                <tarLongFileMode>posix</tarLongFileMode>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
	</build>
</project>
