<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>pig-tar-assembly</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
	    <fileSet>
    		<directory>${project.build.directory}/generated-sources/shell-functions/bin</directory>
    		<outputDirectory>/bin</outputDirectory>
    		<fileMode>0644</fileMode>
    	</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/etc</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/pig</directory>
			<outputDirectory>/pig</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/hive</directory>
			<outputDirectory>/hive</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${multi.module.project.root.dir}/modules/common/src/main/pig</directory>
			<outputDirectory>/pig/macro</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>${multi.module.project.root.dir}/modules/common/src/main/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${multi.module.project.root.dir}/modules/common/src/main/hive</directory>
			<outputDirectory>/hive</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/lib</directory>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/site</directory>
			<outputDirectory>/docs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>